{
    "name": "vscode-edifact",
    "displayName": "EDIFACT",
    "description": "Basic language support for EDIFACT files",
    "icon": "img/icon.png",
    "version": "0.0.3",
    "main": "./out/src/main",
    "publisher": "DAXaholic",
    "galleryBanner": {
        "color": "#5071B0",
        "theme": "dark"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/DAXaholic/vscode-edifact.git"
    },
    "bugs": {
		"url": "https://github.com/DAXaholic/vscode-edifact/issues"
	},
    "author": {
        "name": "DAXaholic",
        "email": "me@daxaholic.com"
    },
    "license": "SEE LICENSE IN LICENSE.txt",
    "engines": {
        "vscode": "^1.11.0"
    },
    "categories": [
        "Languages",
        "Formatters"
    ],
    "activationEvents": [
        "onLanguage:edifact"
    ],
    "contributes": {
        "languages": [
            {
                "id": "edifact",
                "aliases": [
                    "EDIFACT",
                    "EDI"
                ],
                "extensions": [
                    ".edi"
                ],
                "configuration": "./edifact.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "edifact",
                "scopeName": "text.plain.edifact",
                "path": "./syntaxes/edifact.tmLanguage"
            }
        ]
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    }
}
