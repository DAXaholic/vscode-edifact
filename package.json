{
    "name": "vscode-edifact",
    "displayName": "EDIFACT",
    "description": "Basic language support for EDIFACT files",
    "icon": "img/icon.png",
    "version": "0.7.0",
    "main": "./out/src/main",
    "publisher": "DAXaholic",
    "galleryBanner": {
        "color": "#5071B0",
        "theme": "dark"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/DAXaholic/vscode-edifact.git"
    },
    "bugs": {
        "url": "https://github.com/DAXaholic/vscode-edifact/issues"
    },
    "author": {
        "name": "DAXaholic",
        "email": "me@daxaholic.com"
    },
    "license": "SEE LICENSE IN LICENSE.txt",
    "engines": {
        "vscode": "^1.29.0"
    },
    "categories": [
        "Programming Languages",
        "Formatters"
    ],
    "activationEvents": [
        "onLanguage:edifact"
    ],
    "contributes": {
        "languages": [
            {
                "id": "edifact",
                "aliases": [
                    "EDIFACT",
                    "EDI"
                ],
                "extensions": [
                    ".edi"
                ],
                "firstLine": "(UNA......($|UNB)|UNB\\+UNO[A-Z]:)",
                "configuration": "./edifact.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "edifact",
                "scopeName": "text.plain.edifact",
                "path": "./syntaxes/edifact.tmLanguage"
            }
        ],
        "commands": [
            {
                "command": "edifact.putAllSegmentsToSingleLine",
                "title": "Put EDIFACT Segments to Single Line"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "edifact.putAllSegmentsToSingleLine",
                    "when": "editorLangId == edifact"
                }
            ]
        }
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.4",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.52.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "glob": "^7.1.6",
        "mocha": "^8.2.1",
        "typescript": "^4.1.3",
        "tslint": "^5.12.1",
        "vscode-test": "^1.5.0"

    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "lint": "tslint -p ./",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js"
    }
}
