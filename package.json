{
    "name": "vscode-edifact",
    "displayName": "EDIFACT",
    "description": "Basic language support for EDIFACT files",
    "icon": "img/icon.png",
    "version": "0.5.1",
    "main": "./out/src/main",
    "publisher": "DAXaholic",
    "galleryBanner": {
        "color": "#5071B0",
        "theme": "dark"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/DAXaholic/vscode-edifact.git"
    },
    "bugs": {
        "url": "https://github.com/DAXaholic/vscode-edifact/issues"
    },
    "author": {
        "name": "DAXaholic",
        "email": "me@daxaholic.com"
    },
    "license": "SEE LICENSE IN LICENSE.txt",
    "engines": {
        "vscode": "^1.29.0"
    },
    "categories": [
        "Programming Languages",
        "Formatters"
    ],
    "activationEvents": [
        "onLanguage:edifact"
    ],
    "contributes": {
        "languages": [
            {
                "id": "edifact",
                "aliases": [
                    "EDIFACT",
                    "EDI"
                ],
                "extensions": [
                    ".edi"
                ],
                "firstLine": "(UNA......($|UNB)|UNB\\+UNO[A-Z]:)",
                "configuration": "./edifact.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "edifact",
                "scopeName": "text.plain.edifact",
                "path": "./syntaxes/edifact.tmLanguage"
            }
        ]
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^5.2.6",
        "@types/node": "^10.12.21",
        "@types/vscode": "^1.29.0",
        "glob": "^7.1.4",
        "mocha": "^6.1.4",
        "typescript": "^3.3.1",
        "tslint": "^5.12.1",
        "vscode-test": "^1.0.0-next.0"
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "lint": "tslint -p ./",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js"
    }
}
